  color: var(--color-text-primary);
  font-weight: 600;                           /* Bolder labels */
  margin-bottom: 0.5rem;
  display: block;
  letter-spacing: 0.3px;                      /* Slight spacing for clarity */
}

/* Required Field Indicator */
label .required,
